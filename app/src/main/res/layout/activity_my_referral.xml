<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="star.example.stargaze.activities.MyReferralActivity"

        >

        <RelativeLayout
            android:id="@+id/linear_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
         >
            <ImageView
                android:id="@+id/img_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:padding="@dimen/padding_10"
                android:src="@drawable/ic_arrow_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/img_back_arrow"
                android:padding="@dimen/padding_5"
                android:text="@string/referral_code"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linear_toolbar"
            android:background="@color/colorPrimaryDark"
            >
            <ImageView
                android:id="@+id/img_user_refer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_profile_pic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_48"
                android:layout_marginBottom="@dimen/margin_16"
              />
            <TextView
                android:id="@+id/txt_label_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold"
                android:text="@string/your_code"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:padding="@dimen/padding_10"
                android:layout_below="@+id/img_user_refer"
                />
            <LinearLayout
                android:id="@+id/referral_container"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/txt_label_code"
                android:background="@drawable/referral_bg"
                android:gravity="center"
                android:layout_margin="@dimen/margin_16">
                <TextView
                    android:id="@+id/txt_referral_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/orange"
                    android:padding="@dimen/padding_10"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_label_referral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/text_size_14"
                android:text="@string/share_this_referral_code"
                android:textAlignment="center"
                android:textColor="@color/gray_light"
                android:padding="@dimen/padding_10"
                android:layout_below="@+id/referral_container"
                android:layout_margin="@dimen/margin_16"
                />
            <ImageView
                android:id="@+id/share_referral_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_label_referral"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/padding_10"
                android:src="@drawable/ic_share2"/>
        </RelativeLayout>

    </RelativeLayout>


</layout>